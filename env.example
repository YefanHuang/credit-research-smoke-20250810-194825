# ==============================================
# Credit Research API 环境配置模板
# ==============================================

# 应用基础配置
APP_NAME=Credit Research API
APP_VERSION=1.0.0
DEBUG=false
API_V1_PREFIX=/api/v1

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/research_db

# Redis配置
REDIS_URL=redis://localhost:6379/0

# =================================================
# 🔑 API密钥配置
# =================================================

# 搜索API - 用于信息检索
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# 千问API - 主要LLM和向量化服务 (支持多模型)
QWEN_API_KEY=your_qwen_api_key_here

# 其他LLM服务 (可选，用于备选和扩展)
# CLAUDE_API_KEY=your_claude_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here
# DEEPSEEK_API_KEY=your_deepseek_api_key_here  # 已停用

# =================================================
# 🤖 模型配置选择 (通过别名)
# =================================================

# 默认聊天模型 (可选: qwen-turbo, qwen-plus, qwen-max)
DEFAULT_CHAT_MODEL=qwen-turbo

# 默认向量化模型
DEFAULT_EMBEDDING_MODEL=qwen-embedding

# 可用千问模型说明:
# - qwen-turbo: 高性价比，响应快，适合日常任务
# - qwen-plus: 平衡性能，适合复杂分析  
# - qwen-max: 最强性能，适合深度研究

# Token限制 (避免超额费用)
DEFAULT_PERPLEXITY_TOKEN_LIMIT=55000
DEFAULT_QWEN_TOKEN_LIMIT=600000

# 邮件配置 (可选)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=your_email@gmail.com

# 向量数据库配置
VECTOR_DB_TYPE=chromadb
CHROMADB_HOST=localhost
CHROMADB_PORT=8001

# Pinecone配置 (如果使用Pinecone)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment

# 安全配置
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==============================================
# Docker开发环境变量
# ==============================================

# PostgreSQL (Docker)
POSTGRES_DB=research_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# ChromaDB认证 (Docker)
CHROMA_SERVER_AUTH_CREDENTIALS_PROVIDER=chromadb.auth.token.TokenAuthCredentialsProvider
CHROMA_SERVER_AUTH_TOKEN_TRANSPORT_HEADER=X-Chroma-Token